[DEFAULT]
rpc_backend=rabbit
refresh_pipeline_cfg = True
pipeline_polling_interval = 30
trove_control_exchange = ceilometer
sahara_control_exchange = ceilometer
magnetodb_control_exchange = ceilometer
zaqar_control_exchange = ceilometer
control_plane={{ control_plane }}
cluster={{ cluster }}
cloud_name={{ cloud_name }}

[oslo_messaging_rabbit]
rabbit_hosts={{ ceilometer_rabbit_hosts_port_pair }}
rabbit_userid={{ ceilometer_rabbit_user }}
rabbit_password={{ ceilometer_rabbit_password }}
rabbit_use_ssl={{ ceilometer_rabbit_use_ssl }}

[api]
host={{ local_ip }}
pecan_debug=False
default_api_return_limit=100

[publisher]
telemetry_secret=openstack

[publisher_notifier]
metering_topic=metering

[service_credentials]
auth_url={{ id_service_auth_url }}
password={{ id_password }}
username={{ ceilometer_user }}
interface=internalURL
auth_type=password

[keystone_authtoken]
auth_type=password
auth_url={{ id_auth_url }}
signing_dir={{ signing_dir }}
password={{ id_password }}
username={{ ceilometer_user }}

[database]
connection={{ cm_backend_connection }}
metering_time_to_live=-1

[coordination]
backend_url={{ cm_agent_ha_backend }}
check_watchers=10.0
heartbeat=1.0
