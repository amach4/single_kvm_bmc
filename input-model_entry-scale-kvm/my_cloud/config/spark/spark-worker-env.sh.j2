export SPARK_LOCAL_IP={{ spark_local_hostname }}
export SPARK_MASTER_IP={{ spark_local_hostname }}
export SPARK_MASTER_PORT={{ spark_master_port }}
export SPARK_MASTERS={{ spark_masters }}
export SPARK_MASTER_WEBUI_PORT={{ spark_master_webui_port }}

export SPARK_WORKER_PORT={{ spark_worker_port }}
export SPARK_WORKER_WEBUI_PORT={{ spark_worker_webui_port }}
export SPARK_WORKER_DIR={{ spark_worker_directory }}

export SPARK_WORKER_MEMORY={{ spark_worker_memory }}
export SPARK_WORKER_CORES={{ spark_worker_cores }}

# history server
export SPARK_HISTORY_OPTS="$SPARK_HISTORY_OPTS -Dspark.history.fs.logDirectory=file://{{ spark_event_log_directory }} -Dspark.history.ui.port=18082"

# set up for multiple masters using zookeeper
export SPARK_DAEMON_JAVA_OPTS="$SPARK_DAEMON_JAVA_OPTS  -Xms{{ spark_daemon_x_ms }} -Xmx{{ spark_daemon_x_mx }} -XX:MaxPermSize={{ spark_daemon_max_perm_size }} -Dspark.deploy.recoveryMode=ZOOKEEPER -Dspark.deploy.zookeeper.url={{ spark_zookeeper_hosts }} -Dspark.deploy.zookeeper.dir={{ spark_run_dir }}"
