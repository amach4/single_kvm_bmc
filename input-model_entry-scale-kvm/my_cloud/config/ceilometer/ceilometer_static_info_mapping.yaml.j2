      unit: "port"

    - name: "port.update"
      type: "delta"
      unit: "port"

    - name: "router"
      type: "gauge"
      unit: "router"

    - name: "router.create"
      type: "delta"
      unit: "router"

    - name: "router.delete"
      type: "delta"
      unit: "router"

    - name: "router.update"
      type: "delta"
      unit: "router"

    - name: "storage.objects"
      type: "gauge"
      unit: "object"

    - name: "storage.objects.containers"
      type: "gauge"
      unit: "container"

    - name: "storage.objects.size"
      type: "gauge"
      unit: "B"

    - name: "subnet"
      type: "gauge"
      unit: "subnet"

