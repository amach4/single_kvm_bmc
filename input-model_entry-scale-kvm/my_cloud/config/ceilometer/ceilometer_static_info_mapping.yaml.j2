      type: "delta"
      unit: "subnet"

    - name: "subnet.delete"
      type: "delta"
      unit: "subnet"

    - name: "subnet.update"
      type: "delta"
      unit: "subnet"

    - name: "vcpus"
      type: "gauge"
      unit: "vcpu"

    - name: "volume"
      type: "gauge"
      unit: "volume"

    - name: "volume.delete.end"
      type: "delta"
      unit: "volume"

    - name: "volume.size"
      type: "gauge"
      unit: "GB"

    - name: "volume.update.end"
      type: "delta"
      unit: "volume"

