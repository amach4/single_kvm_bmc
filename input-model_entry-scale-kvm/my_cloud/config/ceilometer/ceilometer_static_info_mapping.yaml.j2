    - name: "disk.root.size"
      type: "gauge"
      unit: "GB"

    - name: "image"
      type: "gauge"
      unit: "image"

    - name: "image.delete"
      type: "delta"
      unit: "image"

    - name: "image.size"
      type: "gauge"
      unit: "B"

    - name: "image.update"
      type: "gauge"
      unit: "image"

    - name: "image.upload"
      type: "delta"
      unit: "image"

    - name: "instance"
      type: "gauge"
      unit: "instance"

    - name: "ip.floating"
      type: "gauge"
      unit: "ip"

    - name: "ip.floating.create"
      type: "delta"
      unit: "ip"

    - name: "ip.floating.update"
      type: "delta"
      unit: "ip"

    - name: "memory"
      type: "gauge"
      unit: "MB"

    - name: "network"
      type: "gauge"
      unit: "network"

