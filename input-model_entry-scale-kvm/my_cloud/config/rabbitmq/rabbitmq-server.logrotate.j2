{{ rabbitmq_env.log_base }}/*.log
{
  daily
  compress
  delaycompress
  missingok
  notifempty
  maxsize 45M
  rotate 7
  sharedscripts
  postrotate
      /usr/sbin/rabbitmqctl rotate_logs > /dev/null
  endscript
}
